<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/autore_groove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autore groove"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/nome_groove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome groove"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/autore_groove_text"/>


    <TextView
        android:id="@+id/genere_groove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genere groove"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/nome_groove_text" />

    <TextView
        android:id="@+id/strumenti_groove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strumenti"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/genere_groove_text"
        app:layout_constraintTop_toBottomOf="@id/nome_groove_text" />


    <TextView
        android:id="@+id/uploaddate_groove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data upload"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/strumenti_groove_text"
        app:layout_constraintBottom_toBottomOf="@id/strumenti_groove_text"/>

</android.support.constraint.ConstraintLayout>